@page "/players/details/{id:guid}"
@inject PlayerState playerState

<PersonalInfoCardTemplate
    PersonalInfo="playerState.CurrentPlayer.PersonalInfo"
    Title="Player details"
    GoBackPath="players">
    <MoreInfo>
        <MudText><strong>Weight: </strong>@playerState.CurrentPlayer.PersonalInfo.Weight</MudText>
        <MudText><strong>Height: </strong>@playerState.CurrentPlayer.PersonalInfo.Height</MudText>
    </MoreInfo>
</PersonalInfoCardTemplate>

@code {
    [Parameter] public Guid id { get; set; }
    protected override async Task OnParametersSetAsync()
    {
        if (playerState.CurrentPlayer is null)
        {
            playerState.SetCurrentPlayer(id);
        }
        await base.OnParametersSetAsync();
    }
}
